<?xml version="1.0"?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
        xmlns:helidon="class://com.oracle.coherence.helidon.HelidonNamespaceHandler"
        xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <helidon:http/>

    <helidon:http id="management">
        <port>30000</port>
        <applications>
            <application>com.tangosol.coherence.management.internal.ManagementResourceConfig</application>
        </applications>
    </helidon:http>

    <helidon:http id="metrics">
        <port>9612</port>
        <applications>
            <application context="/metrics">com.tangosol.coherence.metrics.internal.MetricsResourceConfig</application>
        </applications>
    </helidon:http>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>shipping</cache-name>
            <scheme-name>shipping</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <distributed-scheme>
            <scheme-name>shipping</scheme-name>
            <service-name>shipping</service-name>
            <backing-map-scheme>
                <local-scheme>
                    <unit-calculator>BINARY</unit-calculator>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>
    </caching-schemes>

</cache-config>